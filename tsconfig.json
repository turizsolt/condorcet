{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build/",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": ".",
        "types": ["node", "mocha", "reflect-metadata"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "exclude": [
        "node_modules/",
        "build/",
    ]
}
